    font-family: serif;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #poem {
    max-width: 600px;
    text-align: center;
    font-size: 1.4em;
    line-height: 1.8;
    padding: 20px;
    transition: opacity 1.5s ease;
  }

  span.word {
    display: inline-block;
    margin: 4px;
    cursor: grab;
    transition: transform 0.6s ease, opacity 0.6s ease;
  }

